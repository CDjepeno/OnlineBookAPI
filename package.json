{
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.3.0",
    "husky": "^8.0.0"
  },
  "scripts": {
    "lint:nest": "cd apps/nest && npm run lint",
    "lint:react": "cd apps/client-react && npm run lint",
    "test": "npm run lint:react && npm run lint:nest",
    "prepare": "husky install",
    "build:react": "cd apps/client-react && npm run build",
    "build:nest": "cd apps/nest && npm run build",
    "build:all": "npm run build:react && npm run build:nest",
    "lint:all": "npm run lint:react && npm run lint:nest",
    "lint:commit": "commitlint --from=HEAD~1"
  }
}
